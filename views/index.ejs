<!DOCTYPE html>
<html lang="en">
<head>
  <meta http-equiv="Content-Type" content="text/html; charset=UTF-8"/>
  <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1.0"/>
  <title>ERWatch - Home</title>

  <!-- CSS  -->
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.7/css/materialize.min.css">
  <link href="/css/style.css" rel="stylesheet">

</head>
<body>
  <% include common/nav %>

  <div class="section no-pad-bot full-page" id="index-banner">
    <div class= "valign-wrapper">
      <div class="valign container">

        <h1 class="header center red-text text-darken-1">
          <b>Welcome to ERWatch!</b>
        </h1>

        <% if (hospitals.length > 0) { %>
          <div class="row center">
            <div class="col s12">
              <h5 class="header flow-text">Select a hospital to view the current wait time</h5>
            </div>
          </div>

          <div class="row">
            <div class="col s12 l2"></div>
            <div class="col s12 l8">
              <div class="card">
                <div class="card-content">
                  <div class="row">
                    <div class="col s12">
                      <div class="input-field">
                        <select class="hospital-select">
                          <% hospitals.forEach(function(hospital, i) { %>
                            <option value="<%= hospital._id %>"><%= hospital.name %> (<%= hospital.city %>, <%= hospital.province %>)</option>
                          <% }); %>
                        </select>
                      </div>
                    </div>
                  </div>

                  <div class="row">
                    <div class="center-align col s12">
                      <div class="small statistic">
                        <span class="number"><%= waitTime %></span>
                        <span class="caption flow-text">Minute wait time</span>
                      </div>

                      <div id="spinner" class="hide preloader-wrapper active">
                        <div class="spinner-layer spinner-red-only">
                          <div class="circle-clipper left">
                            <div class="circle"></div>
                          </div><div class="gap-patch">
                            <div class="circle"></div>
                          </div><div class="circle-clipper right">
                            <div class="circle"></div>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        <% } %>

        <div class="row center">
          <div class="col s12">
            <h5 class="header flow-text">Please enter your patient code below to view YOUR estimated wait time:</h5>
          </div>
        </div>

        <div class="row">
          <div class="col s12 l2"></div>
          <div class="col s12 l8">
            <div class="card">
              <div class="card-content">
                <div class="input-field">
                  <label for="code-field">Code</label>
                  <input placeholder="123456..." id="code-field" name="code-field" type="text" class="validate">
                </div>
              </div>
            </div>
          </div>
        </div>

        <div class="row center">
          <a id="submit-button" class="btn-large red darken-1">Get Your Wait Time</a>
        </div>

      </div>
    </div>
  </div>

  <!--  Scripts-->
  <script src="https://code.jquery.com/jquery-2.1.1.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.7/js/materialize.min.js"></script>
  <script src="/js/scripts.js"></script>
  <script src="/js/index.js"></script>
</body>
</html>
