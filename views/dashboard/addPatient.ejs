<!DOCTYPE html>
<html>
<head>
  <title>Add Patient</title>
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.7/css/materialize.min.css">
  <link href="/css/style.css" rel="stylesheet">
</head>
<body>
  <% include ../common/nav %>


  <div class="row">
    <form action="/dashboard/add-patient" method="POST">
      <div class="col s6">
        <input class="firstName" type="text" name="firstName" placeholder="First Name" /><br>
      </div>
      <div class="col s6">
        <input class="lastName" type="text" name="lastName" placeholder="Last Name" /><br>
      </div>
      <div class="col s6">
        <input class="healthCard" type="text" name="healthCard" placeholder="Health Card #" /><br>
      </div>


      <div class="input-field col s6" name="gender">
        <select>
          <option value="" disabled selected>Choose your option</option>
          <option value="1">Male</option>
          <option value="2">Female</option>
          <option value="other">Other</option>
        </select>
        <label>Materialize Select</label>
      </div>

      <br>

      <input class="birthday" type="date" name="birthday" placeholder="Birthday" /><br>
      <input class="conditionName" type="text" name="conditionName" placeholder="Condition Name" /><br>
      <textarea class="description" name="description" placeholder="Description"></textarea>
      <select class="severity" name="conditionSeverity">
        <option>1</option>
        <option>2</option>
        <option>3</option>
        <option>4</option>
        <option>5</option>
        <option>6</option>
        <option>7</option>
        <option>8</option>
        <option>9</option>
        <option>10</option>
      </select><br>
      <input class="waitTime" type="number" name="conditionWaitTime" /><br>
      <input class="submit" type="submit" />
    </form>
  </div>
</body>
</html>
