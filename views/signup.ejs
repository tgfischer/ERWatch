<!DOCTYPE html>
<html>
<head>
  <meta http-equiv="Content-Type" content="text/html; charset=UTF-8"/>
  <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1.0"/>

  <title>Sign up</title>
  <link rel="shortcut icon" href="/images/favicon.ico" sizes="256x256">

  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.7/css/materialize.min.css">
  <link href="/css/style.css" rel="stylesheet">
</head>
<body>
  <% include common/nav %>

  <div class="section no-pad-bot full-page" id="index-banner">
    <div class= "valign-wrapper">
      <div class="valign container">

        <div class="row center">
          <h2 class="header col s12 light">Sign Up</h2>
        </div>
        <div class="row">
          <div class="col s12 m2"></div>
          <form class="col s12 m8" action="/signup" method="POST">
            <div class="row">
              <div class="input-field col s12 m6">
                <label for="firstName">First Name</label>
                <input id="firstName" name="firstName" type="text" class="validate" required>
              </div>
              <div class="input-field col s12 m6">
                <label for="lastName">Last Name</label>
                <input id="lastName" name="lastName" type="text" class="validate" required>
              </div>
            </div>
            <div class="row">
              <div class="input-field col s12">
                <label for="email">Email</label>
                <input id="email" name="email" type="email" placeholder="Email" class="validate" required>
              </div>
            </div>
            <div class="row">
              <div class="input-field col s12">
                <label for="password">Password</label>
                <input id="password" name="password" type="password" placeholder="Password" class="validate" required>
              </div>
            </div>

            <% if (hospitals.length > 0) { %>
              <div class="row">
                <div class="input-field col s12">
                  <div class="input-field">
                    <select class="hospital-select" name="hospital">
                      <% hospitals.forEach(function(hospital, i) { %>
                        <option value="<%= hospital._id %>"><%= hospital.name %></option>
                      <% }); %>
                    </select>
                  </div>
                </div>
              </div>
            <% } else { %>
              <div class="row">
                <div class="input-field col s12">
                  <label for="hospitalName">Name</label>
                  <input id="hospitalName" name="hospitalName" type="text" class="validate">
                </div>
              </div>
              <div class="row">
                <div class="input-field col s12">
                  <label for="hospitalStreet">Street</label>
                  <input id="hospitalStreet" name="hospitalStreet" type="text" class="validate">
                </div>
              </div>
              <div class="row">
                <div class="input-field col s12 m4">
                  <label for="hospitalCity">City</label>
                  <input id="hospitalCity" name="hospitalCity" type="text" class="validate">
                </div>
                <div class="input-field col s12 m4">
                  <label for="hospitalPostalCode">Postal Code</label>
                  <input id="hospitalPostalCode" name="hospitalPostalCode" type="text" class="validate">
                </div>
                <div class="input-field col s12 m4">
                  <select name="hospitalProvince">
                    <option value="AB">Alberta</option>
                    <option value="BC">British Columbia</option>
                    <option value="MB">Manitoba</option>
                    <option value="NB">New Brunswick</option>
                    <option value="NL">Newfoundland and Labrador</option>
                    <option value="NS">Nova Scotia</option>
                    <option value="ON">Ontario</option>
                    <option value="PE">Prince Edward Island</option>
                    <option value="QC">Quebec</option>
                    <option value="SK">Saskatchewan</option>
                    <option value="NT">Northwest Territories</option>
                    <option value="NU">Nunavut</option>
                    <option value="YT">Yukon</option>
                  </select>
                </div>
              </div>
            <% } %>

            <input class="submit btn red darken-1" type="submit" />
          </form>

        </div>
      </div>
    </div>
  </div>

  <script src="https://code.jquery.com/jquery-2.1.1.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.7/js/materialize.min.js"></script>
  <script src="/js/scripts.js"></script>
  <script>
  $(document).ready(function() {
    $('select').material_select();
    Materialize.updateTextFields();
  });
  </script>
</body>
</html>
